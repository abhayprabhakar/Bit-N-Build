{
  "info": {
    "name": "Transparency Ledger API",
    "description": "Complete API collection for the Transparency Ledger system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.token) {",
                  "        pm.collectionVariables.set('authToken', response.token);",
                  "        console.log('Token saved:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@transparency.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Departments",
      "item": [
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Finance Department\",\n  \"description\": \"Manages financial operations and budget allocation\",\n  \"allocated_budget\": 1000000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/departments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments"]
            }
          }
        },
        {
          "name": "Get All Departments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/departments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments"]
            }
          }
        },
        {
          "name": "Get Department Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/departments/{{dept_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments", "{{dept_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dept_id\": \"replace-with-department-id\",\n  \"amount\": 5000.00,\n  \"purpose\": \"Office supplies procurement - From: Budget Allocation, To: Office Management\",\n  \"status\": \"Pending\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions"]
            }
          }
        },
        {
          "name": "Approve Transaction",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Approved\",\n  \"comments\": \"Approved for office supplies purchase\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transactions/{{transaction_id}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions", "{{transaction_id}}", "approve"]
            }
          }
        }
      ]
    },
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get Public Transactions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/public/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "public", "transactions"]
            }
          }
        },
        {
          "name": "Verify Ledger Integrity",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/ledger/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ledger", "verify"]
            }
          }
        },
        {
          "name": "Get Full Ledger",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/ledger",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ledger"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Department Budget Report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/department/{{dept_id}}/budget",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "department", "{{dept_id}}", "budget"]
            }
          }
        }
      ]
    },
    {
      "name": "Utilities",
      "item": [
        {
          "name": "Create Sample Data",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/setup/sample-data",
              "host": ["{{baseUrl}}"],
              "path": ["api", "setup", "sample-data"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    }
  ]
}
